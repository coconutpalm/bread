              tooltip="Say hello world">
        </command>
      </menuContribution>-->
      <menuContribution
            locationURI="menu:com.coconut_palm_software.bread.ui.view">
        <command
              commandId="com.coconut_palm_software.bread.ui.commands.randomVerse"
              icon="icons/star.gif"
              id="com.coconut_palm_software.bread.ui.menus.randomVerse"
              mnemonic="R">
        </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.coconut_palm_software.bread.ui.CheckIndexes">
      </startup>
   </extension>

</plugin>
